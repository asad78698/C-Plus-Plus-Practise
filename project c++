	cout<<"-------------------------------------------"<<endl;



switch (chose)
{
	case 1: 
	currency();
	break;
	
	case 2:
	crypto();
	break;
	
	case 3:
	gold();
	break;
	
}

int b;
cout<<"-------------------------------------------"<<endl;
	cout<<"Go To Main Menu Yes = 1 And No = 2"<<endl;
	cin>>b;
	cout<<"-------------------------------------------"<<endl;
	
	switch (b)
	
	{
		case 1:
		while (b!=2)
	
	{	
menu();	
break;
	}

cout<<"\nb*Press =1 To Go Back To Main Menu  \n*Press"<<endl;
break;
	
	case 2:
		cout<<"Thank You "<<endl;
		break;
		
		
}

exit(0);

}


